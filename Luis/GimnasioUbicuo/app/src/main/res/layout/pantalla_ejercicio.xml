<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFondo">

    <ScrollView
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="2"
            android:layout_margin="@dimen/activity_vertical_margin"

            >
<!--
    <TextView
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ejercicio_1"
        android:textSize="30sp"
        android:textColor="@color/colorTexto"
        android:background="@color/colorFondoTexto"
        android:id="@+id/textView13"
        android:layout_gravity="center_horizontal" />
-->
        <TextView
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cabeceraInformacion"
            android:textSize="25sp"
            android:textColor="@color/colorTexto"
            />

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="2"
            >

        <TableRow
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            >

            <TextView
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dificultadEjercicio"
                android:textSize="18sp"
                android:textColor="@color/colorTexto"
                />

            <TextView
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/gradoMedio"
                android:textSize="18sp"
                android:textAlignment="center"
                android:textColor="@color/colorDificultadMedia"
                />

        </TableRow>

        <TableRow
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            >

            <TextView
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/numRepeticiones"
                android:textSize="18sp"
                android:textColor="@color/colorTexto"
                />

            <TextView
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textColor="@color/colorDificultadMedia"
                />

        </TableRow>

        <TableRow >

            <TextView
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/masInfo"
                android:textSize="18sp"
                android:textColor="@color/colorTexto"
                />

            <TextView
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ninguna"
                android:textSize="18sp"
                android:textAlignment="center"
                android:textColor="@color/colorTexto"
                />

        </TableRow>

        </TableLayout>

        <TextView
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="@string/pedirDatos"
            android:textSize="25sp"
            android:textColor="@color/colorTexto"
            />

        <EditText
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText"

        />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/aceptar"
            android:id="@+id/button3"
            android:layout_gravity="center_horizontal"
            android:onClick="ejercicioCompleto"
        />

        </TableLayout>

    </RelativeLayout>

    </ScrollView>

</LinearLayout>